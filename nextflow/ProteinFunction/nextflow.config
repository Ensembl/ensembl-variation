profiles {
  standard {
    process.executor = 'local'
    singularity {
      enabled = true
      autoMounts = true
    }
  }

  lsf {
    executor {
      name = 'lsf'
      queueSize = 500
      submitRateLimit = '100/1sec'
    }

    singularity {
      enabled = true
      autoMounts = true
    }

    process {
      queue = 'production'
      memory = '2GB'
      withLabel: medmem { memory =  '8 GB' }
      withLabel: urgent { memory =  '2 GB' }
      withLabel: higmem { memory = '24 GB' }
      withLabel: long   { memory =  '2 GB' }
    }
  }

  //untested 
  slurm {
    process.executor = 'slurm'
    singularity {
      enabled = true
      autoMounts = true
    }
  }  
}

trace {
    enabled = true
    overwrite = true
    file = "reports/trace.txt"
    //fields = 'task_id,name,status,exit,realtime,%cpu,rss'
}

dag {
    enabled = true
    overwrite = true
    file = "reports/flowchart.html"
}

timeline {
    enabled = true
    overwrite = true
    file = "reports/timeline.html"
}

report {
    enabled = true
    overwrite = true
    file = "reports/report.html"
}
